<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads Intel and Apple Silicon versions of Miro, creates a universal flat package with architecture-aware installation.</string>
    <key>Identifier</key>
    <string>com.github.pkg.MiroUniversal</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>Miro</string>
        <key>intel_download_url</key>
        <string>https://desktop.miro.com/platforms/darwin/Install-Miro.dmg</string>
        <key>arm_download_url</key>
        <string>https://desktop.miro.com/platforms/darwin-arm64/Install-Miro.dmg</string>
    </dict>
    <key>MinimumVersion</key>
    <string>1.0.0</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%intel_download_url%</string>
                <key>download_path</key>
                <string>%RECIPE_CACHE_DIR%/downloads/Miro-Intel.dmg</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>URLDownloader</string>
            <key>Arguments</key>
            <dict>
                <key>url</key>
                <string>%arm_download_url%</string>
                <key>download_path</key>
                <string>%RECIPE_CACHE_DIR%/downloads/Miro-ARM.dmg</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>EndOfCheckPhase</string>
        </dict>
        <dict>
            <key>Processor</key>
            <string>DmgMounter</string>
            <key>Arguments</key>
            <dict>
                <key>dmg_path</key>
                <string>%RECIPE_CACHE_DIR%/downloads/Miro-Intel.dmg</string>
                <key>mount_point_output_variable</key>
                <string>intel_mount_path</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>DmgCopier</string>
            <key>Arguments</key>
            <dict>
                <key>source_path</key>
                <string>%intel_mount_path%/Miro.app</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Miro-Intel.app</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>CommandRunner</string>
            <key>Arguments</key>
            <dict>
                <key>command</key>
                <string>hdiutil detach "%intel_mount_path%" || echo "Intel unmount failed, continuing..."</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>DmgMounter</string>
            <key>Arguments</key>
            <dict>
                <key>dmg_path</key>
                <string>%RECIPE_CACHE_DIR%/downloads/Miro-ARM.dmg</string>
                <key>mount_point_output_variable</key>
                <string>arm_mount_path</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>DmgCopier</string>
            <key>Arguments</key>
            <dict>
                <key>source_path</key>
                <string>%arm_mount_path%/Miro.app</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Miro-ARM.app</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>CommandRunner</string>
            <key>Arguments</key>
            <dict>
                <key>command</key>
                <string>hdiutil detach "%arm_mount_path%" || echo "ARM unmount failed, continuing..."</string>
            </dict>
        </dict>
        <dict>
            <key>Processor</key>
            <string>UniversalFlatPkgBuilder</string>
            <key>Arguments</key>
            <dict>
                <key>app_name</key>
                <string>Miro.app</string>
                <key>intel_app_path</key>
                <string>%RECIPE_CACHE_DIR%/Miro-Intel.app</string>
                <key>arm_app_path</key>
                <string>%RECIPE_CACHE_DIR%/Miro-ARM.app</string>
                <key>pkg_output_path</key>
                <string>%RECIPE_CACHE_DIR%/Miro-Universal.pkg</string>
            </dict>
        </dict>
    </array>
</dict>
</plist>
